// Test if/else
score := 85
if score > 90 {
    print("A")
} else {
    if score > 80 {
        print("B")
    } else {
        print("C")
    }
}

// Test for loop (while-style)
count := 0
for count < 3 {
    print(count)
    count = count + 1
}

// Test closures
makeCounter() {
    count := 0
    increment() {
        count = count + 1
        return count
    }
    return increment
}

counter := makeCounter()
print(counter())
print(counter())
print(counter())
